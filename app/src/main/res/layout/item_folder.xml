    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:padding="2dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/container">


    <RelativeLayout
        android:id="@+id/layout_left"
        android:layout_width="70dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/btnFullScreenMode"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_folder"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:id="@+id/textlayout"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/layout_left"
        >
        <TextView
            android:id="@+id/txtFolderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:maxLines="1"
            android:text="Download"
            android:textSize="@dimen/_12sdp"
            android:textColor="?attr/text_color"
            />

        <TextView
            android:id="@+id/txtFolderPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            android:maxLines="2"
            android:text="hello this is the path of the video"
            android:textSize="12sp"
            android:layout_below="@id/txtFolderName"
            android:textColor="?attr/text_color"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtFolderSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textlayout"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:textSize="12sp"
        android:textColor="#f7ff00"
        />
