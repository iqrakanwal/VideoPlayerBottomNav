<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Ads "
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:textAppearance="@style/MyCustomTextAppearance"

        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_drop_buttons"
        android:padding="5dp"
        android:tint="@color/white"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="close"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"


                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=" "
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="0dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/title1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:onClick="buyClick_day"
                    android:background="#039402"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"

                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_buy"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:id="@+id/text1"

                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#8D000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.6"
                    />



            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#8D000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.6"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:background="#fff"
                android:paddingLeft="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="  "
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"


                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="0dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/title2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#039402"
                    android:onClick="buyClick_day_3"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_buy"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:id="@+id/text2"

                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#8D000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.6"
                    />




            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"


            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:background="#fff"
                android:paddingLeft="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"

                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="0dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/title3"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="buyClick_day15"
                    android:background="#039402"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_buy"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:id="@+id/text3"
                        android:gravity="center"

                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#8D000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.6"
                    />




            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#8D000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.6"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:background="#fff"
                android:paddingLeft="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="0dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/title4"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#039402"
                    android:onClick="buyClick_month"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_buy"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:id="@+id/text4"
                        android:gravity="center"

                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#8D000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.6"
                    />




            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="0dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/title5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorPrimaryDark"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#039402"
                    android:onClick="buyClick_months"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_buy"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:id="@+id/text5"
                        android:textSize="12dp"
                        android:gravity="center"

                        />

                </LinearLayout>




            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#8D000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.6"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=" "
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="0dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/title6"
                    android:textColor="@color/colorPrimaryDark"


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#039402"
                    android:onClick="buyClick_forever"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_buy"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"

                        />

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:gravity="center"
                        />

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/white"
        android:id="@+id/pb"
        />
</RelativeLayout>