<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:id="@+id/container"
>

    <RelativeLayout
        android:id="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnFullScreenMode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_folder"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_left"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lay"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtFolderName"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:maxLines="2"
                android:textAlignment="center"
                android:singleLine="true"
                android:text="Download"
                android:textSize="15sp"
                android:textColor="?attr/text_color"
                />
            <TextView
                android:id="@+id/txtFolderPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="3dp"
                android:visibility="gone"
                android:maxLines="2"
                android:text="hello this is the path of the video"
                android:textSize="12sp"
                android:layout_below="@id/txtFolderName"
                android:textColor="?attr/text_color"
                />

            <TextView
                android:id="@+id/txtFolderSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/_2sdp"
                android:textSize="@dimen/_8sdp"
                android:layout_below="@id/txtFolderPath"
                android:textColor="#FFFF00"
                />


        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/folderoption"
            android:layout_toRightOf="@+id/lay"
            android:src="@drawable/ic_baseline_more_vert_24"/>


    </RelativeLayout>
