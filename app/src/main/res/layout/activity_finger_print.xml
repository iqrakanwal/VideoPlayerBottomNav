<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?background_customize"
    tools:context=".activities.FingerPrintActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finger"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_80sdp"
        android:text="Finger Print Lock"/>


    <ImageView
        android:id="@+id/fingerprintImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_below="@+id/finger"
        android:layout_marginTop="@dimen/_30sdp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/paraLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_65sdp"
        android:text="Place your Finger on the Scanner to Proceed"
        android:textAlignment="center" />
</LinearLayout>